@using AspNetCore.Mvc.Extensions
@model Boolean?
@using System.Globalization
@{
    bool value = false;
    if (Html.ViewData.Model != null)
    {
        value = Convert.ToBoolean(Html.ViewData.Model, CultureInfo.InvariantCulture);
    }
}
@Html.BooleanCheckboxButton("", Html.ViewData.ModelMetadata.AdditionalValues["BooleanText"].ToString(), value, new { @class = "btn-group-toggle", data_toggle = "buttons" }, new { }, new { @class = "btn btn-outline-secondary btn-sm" })