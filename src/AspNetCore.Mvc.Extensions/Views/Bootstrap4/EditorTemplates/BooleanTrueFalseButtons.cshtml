@using AspNetCore.Mvc.Extensions
@model Boolean?
@using System.Globalization
@{
    bool value = false;
    if (Html.ViewData.Model != null)
    {
        value = Convert.ToBoolean(Html.ViewData.Model, CultureInfo.InvariantCulture);
    }
}
@Html.TrueFalseRadioButtonList("", value, false, new { @class = "btn-group-toggle", data_toggle = "buttons" }, new { @class = "btn btn-outline-secondary mr-2 btn-sm" })