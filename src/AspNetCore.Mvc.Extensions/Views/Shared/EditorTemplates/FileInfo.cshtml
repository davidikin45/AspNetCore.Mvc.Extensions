@using System.IO
@using Microsoft.AspNetCore.Hosting
@using AspNetCore.Mvc.Extensions.Helpers
@model FileInfo
@inject IWebHostEnvironment hostingEnvironment

@if (Model.IsImage())
{
    <img src="@Model.VirtualPathSlug(hostingEnvironment, 200, 0)" />
}
else if (Model.IsVideo())
{
    <video width="200" src="@Model.VirtualPathSlug(hostingEnvironment)" poster="@Model.VirtualPathSlug(hostingEnvironment, 200, 0)" controls preload="none"></video>
}
else
{
    <img src="@Model.VirtualPathSlug(hostingEnvironment, 0,0,75)" />
}